                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">submit</button>
                </div>
                <a href="/campground">Go Back</a>
            </form>
        </div>
    </div>
</div>
